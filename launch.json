{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch IoT Device Server",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/server.js",
            "env": {
                "NODE_ENV": "development",
                "DB_HOST": "localhost",
                "DB_PORT": "3306",
                "DB_USER": "root",
                "DB_PASSWORD": "root",
                "DB_NAME": "iot-schema",
                "PORT": "8080"
            },
            "envFile": "${workspaceFolder}/.env",
            "console": "integratedTerminal",
            "restart": true,
            "runtimeExecutable": "node",
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "name": "Debug IoT Device Server",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/server.js",
            "env": {
                "NODE_ENV": "debug"
            },
            "envFile": "${workspaceFolder}/.env",
            "console": "integratedTerminal",
            "stopOnEntry": false,
            "restart": true
        }
    ]
}